{
  "name": "@iscodex/tailwindcss-animate",
  "version": "1.0.0",
  "description": "Extended animation utilities for Tailwind CSS",
  "main": "dist/index.js",
  "style": "dist/index.css",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "style": "./dist/index.css"
    },
    "./v3": "./dist/index.js",
    "./v4": "./dist/index.css"
  },
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "tsc",
    "build:css": "cp -r src/*.css src/utilities dist/",
    "dev": "npm run build:watch",
    "test": "npm run build && jest",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iscodex/tailwindcss-animate.git"
  },
  "keywords": [
    "tailwindcss",
    "tailwind-plugin",
    "css-animations",
    "keyframes",
    "animate",
    "transitions",
    "utilities"
  ],
  "files": [
    "/src",
    "/README.md",
    "/LICENSE"
  ],
  "author": "Francisco Luis Rios Vega <alckordev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iscodex/tailwindcss-animate/issues"
  },
  "homepage": "https://github.com/iscodex/tailwindcss-animate#readme",
  "peerDependencies": {
    "tailwindcss": ">=3.1.0 || >=4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@tailwindcss/cli": "^4.1.12",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/jest": "^30.0.0",
    "eslint": "^9.34.0",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^30.1.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
