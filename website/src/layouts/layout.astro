---
import "../globals.css";
import { ClientRouter } from "astro:transitions";
import Footer from "../components/footer.astro";
import Navbar from "../components/navbar.astro";
import { cn } from "../lib/cn";

interface Props {
  title?: string;
  description?: string;
  builder?: boolean;
  class?: string;
}

const {
  title = "Tailwind CSS Animate",
  description = "Extended animation utilities for Tailwind CSS v4",
  builder = false,
  class: classes,
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <ClientRouter />
  </head>
  <body class={cn("bg-slate-950 text-white", classes)}>
    {!builder && <Navbar />}
    <main>
      <slot />
    </main>
    {!builder && <Footer />}
  </body>
</html>

<style is:global>
  .dots-pattern {
    background-image: radial-gradient(circle, rgba(148, 163, 184, 0.15) 1px, transparent 1px);
    background-size: 40px 40px;
  }
</style>
