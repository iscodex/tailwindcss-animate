---
import Particles from "../components/particles.astro";
---

<section class="relative min-h-[65dvh] flex items-center justify-center overflow-hidden">
  <div class="absolute inset-0 dots-pattern opacity-70"></div>

  <Particles />

  <div class="relative text-center max-w-5xl mx-auto px-6">
    <div class="animate-fade-in animate-delay-none">
      <h1
        class="text-5xl md:text-7xl font-bold mb-6 tracking-tight bg-gradient-to-b from-cyan-500 to-pink-500 bg-clip-text text-transparent"
      >
        Tailwind CSS
        <span class="block">Animate</span>
      </h1>
    </div>

    <div class="animate-fade-in animate-delay-[0.1s]">
      <p class="text-lg md:text-xl text-slate-400 mb-12 max-w-2xl mx-auto leading-relaxed">
        Extended animation utilities for Tailwind CSS v4.
        <span class="text-slate-300">Zero configuration</span>, ready to use.
      </p>
    </div>

    <div
      class="animate-fade-in animate-delay-[0.15s] flex flex-col sm:flex-row gap-4 justify-center"
    >
      <a
        href="#installation"
        class="bg-slate-200 text-slate-950 px-8 py-3 rounded-lg font-medium hover:bg-white transition-all duration-200 animate-glow"
      >
        Get Started
      </a>
      <a
        href="/configurator"
        class="border border-slate-700 text-slate-300 px-8 py-3 rounded-lg font-medium hover:bg-slate-900 hover:border-slate-600 transition-all duration-200"
      >
        View Examples
      </a>
    </div>
  </div>
</section>
