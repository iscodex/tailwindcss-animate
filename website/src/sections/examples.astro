---
import { Code } from "astro:components";
---

<section id="examples" class="py-20">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-slate-200 mb-4">Animation Examples</h2>
      <p class="text-slate-400 text-lg">See the animations in action</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <div class="bg-slate-900 border border-slate-800 rounded-xl p-8 text-center">
        <div
          class="w-16 h-16 bg-slate-700 rounded-xl mx-auto mb-6 animate-swing animate-infinite flex items-center justify-center"
        >
          <div class="w-6 h-6 bg-slate-400 rounded-md"></div>
        </div>

        <h3 class="text-slate-200 font-semibold mb-2">Swing</h3>
        <p class="text-slate-400 text-sm mb-4">Playful swing motion</p>
        <Code code={`animate-swing`} lang="css" class="rounded-lg p-4 bg-slate-950/50!" />
      </div>

      <!-- Slide In Up -->
      <div class="bg-slate-900 border border-slate-800 rounded-xl p-8 text-center">
        <div
          class="w-16 h-16 bg-slate-700 rounded-xl mx-auto mb-6 animate-heart-beat animate-infinite flex items-center justify-center"
        >
          <div class="w-6 h-6 bg-slate-400 rounded-md"></div>
        </div>
        <h3 class="text-slate-200 font-semibold mb-2">Heart beat</h3>
        <p class="text-slate-400 text-sm mb-4">Playful heart beat motion</p>
        <Code code={`animate-heart-beat`} lang="css" class="rounded-lg p-4 bg-slate-950/50!" />
      </div>

      <!-- Wiggle -->
      <div class="bg-slate-900 border border-slate-800 rounded-xl p-8 text-center">
        <div
          class="w-16 h-16 bg-slate-700 rounded-xl mx-auto mb-6 animate-wobble animate-infinite flex items-center justify-center"
        >
          <div class="w-6 h-6 bg-slate-400 rounded-md"></div>
        </div>
        <h3 class="text-slate-200 font-semibold mb-2">Wobble</h3>
        <p class="text-slate-400 text-sm mb-4">Playful wobble motion</p>
        <Code code={`animate-wobble`} lang="css" class="rounded-lg p-4 bg-slate-950/50!" />
      </div>
    </div>

    <div class="text-center mt-12">
      <a
        href="/configurator"
        class="group/link inline-flex items-center space-x-2 text-slate-300 hover:text-slate-200 transition-colors"
      >
        <span>Try configurator</span>
        <svg
          class="w-4 h-4 group-hover/link:translate-x-1 transition-transform"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"
          ></path>
        </svg>
      </a>
    </div>
  </div>
</section>
