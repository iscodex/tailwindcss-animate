---
import { Code } from "astro:components";
---

<section id="installation" class="py-20 bg-slate-900/50">
  <div class="max-w-4xl mx-auto px-6">
    <div class="animate-fade-in-up text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-slate-200 mb-4">Quick Installation</h2>
      <p class="text-slate-400 text-lg">Get started with tailwindcss-animate in seconds</p>
    </div>

    <div class="space-y-6">
      <div class="bg-slate-900 rounded-xl p-6 border border-slate-800">
        <div class="flex items-center mb-3">
          <span
            class="w-6 h-6 bg-pink-500 text-white text-sm font-bold rounded-full flex items-center justify-center mr-3"
          >
            1
          </span>
          <h3 class="text-white font-semibold">Install the package</h3>
        </div>
        <Code
          code={`npm install @iscodex/tailwindcss-animate`}
          lang="bash"
          class="rounded-lg p-4 bg-slate-800!"
        />
      </div>

      <div class="bg-slate-900 rounded-xl p-6 border border-slate-800">
        <div class="flex items-center mb-3">
          <span
            class="w-6 h-6 bg-pink-500 text-white text-sm font-bold rounded-full flex items-center justify-center mr-3"
          >
            2
          </span>
          <h3 class="text-white font-semibold">Import in your CSS</h3>
        </div>
        <Code
          code={`@import "tailwindcss";
@import "@iscodex/tailwindcss-animate";`}
          lang="bash"
          class="rounded-lg p-4 bg-slate-800!"
        />
      </div>

      <div class="bg-slate-900 rounded-xl p-6 border border-slate-800">
        <div class="flex items-center mb-3">
          <span
            class="w-6 h-6 bg-pink-500 text-white text-sm font-bold rounded-full flex items-center justify-center mr-3"
          >
            3
          </span>
          <h3 class="text-white font-semibold">Start animating</h3>
        </div>
        <Code
          code={`<div class="animate-wiggle animate-infinite">Hello World</div>`}
          lang="html"
          class="rounded-lg p-4 bg-slate-800!"
        />

        <div class="flex justify-center mt-4">
          <div
            class="bg-gradient-to-r from-cyan-500 to-cyan-600 text-white px-6 py-3 rounded-lg animate-wiggle animate-infinite"
          >
            Hello World
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
