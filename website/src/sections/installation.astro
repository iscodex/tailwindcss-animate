---
import { Code } from "astro:components";
---

<section id="installation" class="py-20 bg-slate-800">
  <div class="max-w-3xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-white mb-4">Installation</h2>
      <p class="text-slate-400">Get started in under 30 seconds</p>
    </div>

    <div class="space-y-6">
      <!-- Step 1 -->
      <div class="bg-slate-900 rounded-xl p-6 border border-slate-700">
        <div class="flex items-center mb-3">
          <span
            class="w-6 h-6 bg-purple-500 text-white text-sm font-bold rounded-full flex items-center justify-center mr-3"
          >
            1
          </span>
          <h3 class="text-white font-semibold">Install the package</h3>
        </div>
        <Code
          code={`npm install @iscodex/tailwindcss-animate`}
          lang="bash"
          wrap
          class="rounded-lg p-4 bg-slate-800!"
        />
      </div>

      <!-- Step 2 -->
      <div class="bg-slate-900 rounded-xl p-6 border border-slate-700">
        <div class="flex items-center mb-3">
          <span
            class="w-6 h-6 bg-purple-500 text-white text-sm font-bold rounded-full flex items-center justify-center mr-3"
          >
            2
          </span>
          <h3 class="text-white font-semibold">Import in your CSS</h3>
        </div>
        <Code
          code={`@import "tailwindcss";
@import "@iscodex/tailwindcss-animate";`}
          lang="bash"
          wrap
          class="rounded-lg p-4 bg-slate-800!"
        />
      </div>

      <!-- Step 3 -->
      <div class="bg-slate-900 rounded-xl p-6 border border-slate-700">
        <div class="flex items-center mb-3">
          <span
            class="w-6 h-6 bg-purple-500 text-white text-sm font-bold rounded-full flex items-center justify-center mr-3"
          >
            3
          </span>
          <h3 class="text-white font-semibold">Start animating</h3>
        </div>
        <Code
          code={`<div class="animate-wiggle animate-infinite">Hello World</div>`}
          lang="html"
          wrap
          class="rounded-lg p-4 bg-slate-800!"
        />

        <div class="flex justify-center mt-4">
          <div
            class="bg-gradient-to-r from-purple-500 to-pink-500 text-white px-6 py-3 rounded-lg animate-wiggle animate-infinite"
          >
            Hello World
          </div>
        </div>
      </div>
    </div>

    <!-- Requirements Note -->
    <div class="mt-8 bg-blue-900/20 border border-blue-500/30 rounded-xl p-6 text-center">
      <p class="text-blue-200">
        Requires <strong>Tailwind CSS v4.0.0+</strong>
      </p>
    </div>
  </div>
</section>
